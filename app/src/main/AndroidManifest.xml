<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fyp.sarcasmania.app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sarcasmania_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.fyp.sarcasmania.app.Activities.splashSreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fyp.sarcasmania.app.Activities.signup"
            android:label="Signup" />
        <activity
            android:name="com.fyp.sarcasmania.app.Activities.login"
            android:label="Login" />
        <activity android:name="com.fyp.sarcasmania.app.Activities.MainActivity" />
        <activity
            android:name="com.fyp.sarcasmania.app.Activities.SettingsActivity"
            android:label="Settings" />
    </application>

</manifest>