<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outside border/shadow -->
    <item>
        <shape android:shape="oval">
            <size android:width="70dp" android:height="70dp" />
            <gradient android:angle="90" android:startColor="@color/statusBarColor" android:endColor="#b9b9b9" />
        </shape>
    </item>

    <!-- Inset -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="oval">
            <gradient android:angle="90" android:startColor="@color/statusBarColor" android:endColor="#c9c9c9" />
        </shape>
    </item>

    <!-- Inside border/shadow -->
    <item android:top="5dp" android:left="5dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="oval">
            <gradient android:angle="90" android:startColor="@color/statusBarColor" android:endColor="#cbcbcb" />
        </shape>
    </item>

    <!-- Main button -->
    <item android:top="3dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="#ffffff" />
        </shape>
    </item>

</layer-list>